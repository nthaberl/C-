@using ChefsAndDishes.Models;
@model Dish;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Add a Dish!</h1>
        <div>
            <form asp-action="CreateDish">
                <span asp-validation-for="DishName"></span>
                <label asp-for="DishName"></label>
                <input asp-for="DishName">

                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories"></label>
                <input asp-for="Calories">

                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <input asp-for="Description">

                <span asp-validation-for="ChefId"></span>
                <label asp-for="ChefId"></label>
                <select asp-for="ChefId">
                    @foreach(Chef chef in Model.AllChefs)
                    {
                        <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                    }
                </select>

                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness"></label>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <button>Add Dish</button>
            </form>
        </div>
        <a href="/">Home</a>
</body>
</html>